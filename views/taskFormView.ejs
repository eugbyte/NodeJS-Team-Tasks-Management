<body>
    
<%- include('includes/navbar.ejs') %> 
    <br>
    <form class="form-horizontal" method="POST" action=<% if (update) { %>
        "/task-form-update"
        <% } else { %>
            "task-form"
            <% } %>
    >
        <div class="form-group">
            <label for="name" class="control-label col-sm-2">Enter Task:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" id="name" value="<%= task.name %>">
            </div>
            <input type="hidden" class="form-control" name="_id" id="id" value="<%= task._id %>">
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-success" name="Submit" value="Submit">
            </div>
        </div>
    </form>
    
</body>
